<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.github.wslxm.springbootplus2.manage.admin.mapper.AdminUserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="io.github.wslxm.springbootplus2.manage.admin.model.vo.AdminUserVO">
        <id column="id" property="id"/>
        <result column="create_time" property="createTime"/>
        <result column="username" property="username"/>
        <!-- <result column="password" property="password"/> -->
        <result column="gender" property="gender"/>
        <result column="disable" property="disable"/>
        <result column="dep_ids" property="depIds"/>
        <result column="position" property="position"/>
        <result column="head_pic" property="headPic"/>
        <result column="phone" property="phone"/>
        <result column="full_name" property="fullName"/>
        <result column="address" property="address"/>
        <result column="age" property="age"/>
        <result column="reg_time" property="regTime"/>
        <result column="end_time" property="endTime"/>
        <result column="wx_open_id" property="wxOpenId"/>
        <result column="remarks" property="remarks"/>
        <!-- 角色信息 -->
        <collection property="roles" ofType="io.github.wslxm.springbootplus2.manage.admin.model.vo.AdminRoleVO">
            <id column="roleId" property="id"/>
            <result column="roleName" property="name"/>
            <result column="roleCode" property="code"/>
        </collection>
    </resultMap>

    <!-- 通用查询结果列: <include refid="Base_Column_List"></include>  -->
    <sql id="Base_Column_List">

               id,
               create_user,
               update_user,
               create_time,
               update_time,
               deleted,
               version,
               head_pic,
               username,
               full_name,
               password,
               address,
               age,
               gender,
               disable,
               reg_time,
               end_time
        </sql>

    <select id="list" resultMap="BaseResultMap">
        select
        u.*,
        r.id as roleId,
        r.code as roleCode,
        r.name as roleName
        from t_admin_user u
        left join t_admin_role_user ru on u.id = ru.user_id
        left join t_admin_role r on r.id = ru.role_id
        where u.deleted = 0
        <if test="query.id != null and query.id != ''">
            and u.id = #{query.id}
        </if>
        <if test="query.username != null and query.username != ''">
            and u.username like concat(#{query.username},'%')
        </if>
        <if test="query.phone != null and query.phone != ''">
            and u.phone like concat(#{query.phone},'%')
        </if>
        <if test="query.fullName != null and query.fullName != ''">
            and u.full_name like concat(#{query.fullName},'%')
        </if>
        <if test="query.disable != null">
            and u.disable = #{query.disable}
        </if>
        <if test="query.position != null">
            and u.position = #{query.position}
        </if>
        <if test="createUserId != null">
            and u.create_user = #{createUserId}
        </if>
        <if test="query.depIds != null and query.depIds != ''">
            and #{query.depIds} = u.dep_ids
        </if>
          <if test="query.regTimeStart != null and query.regTimeEnd != null">
            and #{query.regTimeEnd} >= u.reg_time and u.reg_time >= #{query.regTimeStart}
        </if>
        order by u.create_time desc
    </select>

    <select id="findByRoleId" resultType="io.github.wslxm.springbootplus2.manage.admin.model.entity.AdminUser">
              select * from t_admin_user where id in (
                     select user_id from t_admin_role_user where role_id = #{roleId}
              )
     </select>
</mapper>

