<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.1.7.RELEASE</version>
        <relativePath/> <!-- lookup parent from repository -->
    </parent>

    <groupId>com.ws.ldy</groupId>
    <artifactId>spring-boot-plus2</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <name>spring-boot-plus2</name>
    <packaging>pom</packaging>
    <description>Demo project for Spring Boot</description>

    <properties>
        <java.version>1.8</java.version>
        <!-- 项目/模板版本号管理 -->
        <admin-core.version>0.0.1-SNAPSHOT</admin-core.version>               <!-- admin-core  -->
        <admin-console.version>0.0.1-SNAPSHOT</admin-console.version>         <!-- admin-console -->

        <!-- 依赖版本管理 -->
        <mysql.version>8.0.16</mysql.version>              <!-- mysql  -->
        <druid.version>1.1.10</druid.version>              <!-- druid -->
        <hutool-all.version>5.0.4</hutool-all.version>     <!-- hutool -->
    </properties>

    <modules>
        <module>admin-core</module>       <!-- 自定义核心jar依赖，web/jpa/druid/redis/权限控制核心 -->
        <module>admin-console</module>    <!-- 后台管理：角色/用户/菜单/代码生成等 -->
        <module>admin-demo-web</module>   <!-- 代码生成功能测试项目  -->
    </modules>

    <!-- spring-boot-starter-test -->
    <dependencies>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
            <exclusions>
                <exclusion>
                    <groupId>org.junit.vintage</groupId>
                    <artifactId>junit-vintage-engine</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
    </dependencies>
</project>
